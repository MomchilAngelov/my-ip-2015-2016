package testpack;
import java.util.Scanner;

public class CommandHandler {
	public static void main(String[] args){
		System.out.println("Enter command:");
		final Scanner in = new Scanner(System.in);
		final String command = in.next();
		final CommandHandler handle = parse(command);
		final int result = handle.run();
		System.out.println("Result: " + result);
		in.close();
	}
	
	private static CommandHandler parse(String command){
		final String[] split = command.split(":");
		if (split[0].equals("sum")){
			return new CommandHandler(){
				return Integer.valueOf(split[1]) + Integer.valueOf(split[2]);
			}
		}
		throw new IllegalArgumentException(
			"Unknown command " + command);
		
		return null;
	}

	public int run(){
		return 0;
	}

}

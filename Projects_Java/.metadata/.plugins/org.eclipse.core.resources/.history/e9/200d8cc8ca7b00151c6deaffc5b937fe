package inheritance_example;

import java.util.ArrayList;
import java.util.List;

public class Wolf extends Animal{
	public Wolf(String name){
		this.name = name;
	}
	
	public void talk(){
		System.out.println("Howlllllll");
	}
	
	public void fight(){
		System.out.println("-5 hp faggot");
	}
	
	public void mate(Wolf other){
		System.out.println("Sex with " + other.name);
		Wolf offspring = new Wolf(this.name + other.name);
		info.add(this.name + other.name);
	}
	
	public static void main(String[] args){
		List <String> info = new ArrayList<String>();
		Animal ameba = new Animal();
		Wolf sharo = new Wolf("sharo");
		Wolf shara = new Wolf("shara");
		info.add("sharo");
		info.add("shara");
		
		ameba.talk();
		sharo.talk();
		ameba.fight();
		sharo.fight();
		//ameba.mate();
		sharo.mate(shara);
		sharo.mate(shara);
	}
}

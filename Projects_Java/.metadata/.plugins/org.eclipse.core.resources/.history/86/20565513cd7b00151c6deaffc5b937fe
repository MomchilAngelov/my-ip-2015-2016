package inheritance_example;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;



public class Wolf extends Animal{
	static int count = 0;
	
	public Wolf(String name){
		this.name = name;
		count += 1;
	}
	
	public void talk(){
		System.out.println("Howlllllll");
	}
	
	public void fight(){
		System.out.println("-5 hp faggot");
	}
	
	public Map<String, Wolf> mate(Wolf other, Map<String, Wolf> info){
		System.out.println("Sex with " + other.name);
		System.out.println("Name of child: " + this.name + other.name + count);
		String name = this.name + other.name + count;
		Wolf offspring = new Wolf(name);
		info.put(name, offspring);
		return info;
	}
	
	public static void main(String[] args){
		Map <String, Wolf> info = new HashMap<String, Wolf>();
		Animal ameba = new Animal();
		Wolf sharo = new Wolf("sharo");
		Wolf shara = new Wolf("shara");
		info.put("sharo", sharo);
		info.put("shara", shara);
		System.out.println(Wolf.count);
		
		ameba.talk();
		sharo.talk();
		ameba.fight();
		sharo.fight();
		//ameba.mate();
		info = sharo.mate(shara, info);
		info = sharo.mate(shara, info);
		info = sharo.mate(shara, info);
		System.out.println(Wolf.count);
		
		for (Map.Entry<String, Wolf> entry : info.entrySet()) {
			System.out.println(entry);
		}
	}
}

package socket;

import java.io.IOException;
import java.io.PrintStream;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.Scanner;

public class Server {
	private static final int SERVER_PORT = 8000;
	private static final String hostName = "localhost";
	
	public static void main(String[] args) throws IOException {
		final ServerSocket socketServer = new ServerSocket(SERVER_PORT);
		final Socket socket = new Socket(hostName, SERVER_PORT);
		
		final Scanner in = new Scanner(socket.getInputStream());
		final PrintStream printStream = new PrintStream(socket.getOutputStream());
		while (run) {
			final String line = in.nextLine();
			printStream.println("echo" + line);
		}
		in.close();
		socket.close();
	}
	
}

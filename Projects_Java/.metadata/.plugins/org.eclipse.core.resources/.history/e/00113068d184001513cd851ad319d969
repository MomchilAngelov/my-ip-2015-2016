package tinker;

public class Parser{
	Parser(){
		DataHolder data = new DataHolder();
		//TODO commands in a list inside parser
		//Fix the rest of the program
		Command.commander.put("login", new Login(data));
		Command.commander.put("logout", new Logout(data));
		Command.commander.put("info", new Info(data));
		Command.commander.put("listavailable", new ListAvailable(data));
	}
	public void parse(String command){
		//for (Map.Entry<String, Command> entry : commander.entrySet()) {
		//    System.out.println(entry);
		//}
		if(command.contains(":")){
			String[] broken_command = command.split(":");
			if (commander.containsKey(broken_command[1])){
				commander.get(broken_command[1]).execute(broken_command);
			} else {
				System.out.println("error:nocommand");
			}
		} else {
			System.out.println("Invalid input!");
		}
	}
}
